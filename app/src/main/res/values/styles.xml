<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainCardStyle">
        <item name="android:backgroundTint">@color/mainCardBg</item>
        <item name="cardElevation">10dp</item>
        <item name="cardCornerRadius">14dp</item>
    </style>

    <style name="SecondCardStyle">
        <item name="android:backgroundTint">@color/secondCardBg</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito_regular</item>
    </style>

    <style name="TitleLightStyle" parent="TextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TitleDarkStyle" parent="TextStyle">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextLightStyle" parent="TextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextDarkStyle" parent="TextStyle">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonStyle" parent="TextStyle">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.11</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="cornerRadius">14dp</item>
    </style>
</resources>